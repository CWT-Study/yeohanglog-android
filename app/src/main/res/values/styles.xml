<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/main</item>
        <item name="android:navigationBarColor">@color/main</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuTitle">
        <item name="android:textColor">@color/color_click_menu</item>
        <item name="android:textSize">@dimen/size_13</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MenuValue">
        <item name="android:textColor">@color/color_click_menu_value</item>
        <item name="android:textSize">@dimen/size_13</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Version">
        <item name="android:textColor">@color/gray_999999</item>
        <item name="android:textSize">@dimen/size_13</item>
    </style>

    <style name="bottom_navigation">
        <item name="android:background">@null</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="DefaultScrollView">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TextTripPeriodTitle">
        <item name="android:textColor">@color/trip_plan_period_title</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTripPeriodDate">
        <item name="android:textColor">@color/color_click_trip_period</item>
        <item name="android:textSize">@dimen/size_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">@color/title</item>
        <item name="android:text">TEXT_TITLE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

    <style name="text_main_home_user_name">
        <item name="android:textColor">@color/main_home_user_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_30</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_main_home_welcome">
        <item name="android:textColor">@color/main_home_welcome</item>
        <item name="android:text">@string/main_home_welcome</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="text_main_home_trip_title">
        <item name="android:textColor">@color/main_home_trip_title</item>
        <item name="android:text">TEXT_TRIP_TITLE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_main_home_trip_day">
        <item name="android:textColor">@color/main_home_trip_day</item>
        <item name="android:text">TEXT_TRIP_DAY</item>
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <style name="text_main_home_trip_period">
        <item name="android:textColor">@color/main_home_trip_period</item>
        <item name="android:text">TEXT_TRIP_PERIOD</item>
        <item name="android:textSize">@dimen/size_10</item>
    </style>

    <style name="text_main_home_look_back">
        <item name="android:textColor">@color/main_home_look_back</item>
        <item name="android:text">@string/main_home_look_back</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

    <style name="text_main_home_trip_log_item">
        <item name="android:textColor">@color/main_home_trip_log_item</item>
    </style>

    <style name="text_main_home_trip_log_item_title" parent="text_main_home_trip_log_item">
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_main_home_trip_log_item_period" parent="text_main_home_trip_log_item">
        <item name="android:textSize">@dimen/size_10</item>
    </style>

    <style name="text_trip_name_info">
        <item name="android:textColor">@color/trip_plan_name_info</item>
        <item name="android:text">@string/trip_add_description</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

    <style name="more_user_contents">
        <item name="android:textColor">@color/more_user_contents</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="trip_plan_item_year">
        <item name="android:textColor">@color/trip_plan</item>
        <item name="android:textSize">@dimen/size_10</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">YEAR</item>
    </style>

    <style name="trip_plan_item_month">
        <item name="android:textColor">@color/trip_plan</item>
        <item name="android:textSize">@dimen/size_10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">MONTH</item>
    </style>

    <style name="trip_plan_item_day">
        <item name="android:textColor">@color/trip_plan</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">DAY</item>
    </style>

    <style name="trip_plan_item_name">
        <item name="android:textColor">@color/trip_plan</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:text">TEXT_NAME</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="main_trip_plan_no_contents_title">
        <item name="android:textColor">@color/main_trip_plan_no_contents_title</item>
        <item name="android:text">@string/main_trip_plan_no_contents_title</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_trip_plan_no_contents_message">
        <item name="android:textColor">@color/main_trip_plan_no_contents_message</item>
        <item name="android:text">@string/main_trip_plan_no_contents_message</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_home_no_contents_title">
        <item name="android:textColor">@color/main_home_no_contents_title</item>
        <item name="android:text">@string/main_home_no_contents_title</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_home_no_contents_message">
        <item name="android:textColor">@color/main_home_no_contents_message</item>
        <item name="android:text">@string/main_home_no_contents_message</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="trip_plan_button_next">
        <item name="android:textColor">@color/color_button_next</item>
        <item name="android:text">@string/button_next</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="trip_plan_button">
        <item name="android:textColor">@color/trip_plan_info</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="trip_account_total_title">
        <item name="android:textColor">@color/trip_account_total_title</item>
        <item name="android:textSize">@dimen/size_10</item>
    </style>

    <style name="trip_account_total">
        <item name="android:textColor">@color/trip_account_total</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:text">TEXT_TOTAL</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="trip_album_no_contents">
        <item name="android:textColor">@color/trip_album_no_contents</item>
        <item name="android:text">@string/trip_album_no_contents</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="trip_check_no_contents">
        <item name="android:textColor">@color/trip_check_no_contents</item>
        <item name="android:text">@string/trip_check_no_contents</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_home_new_trip">
        <item name="android:textColor">@color/main_home_new_trip</item>
        <item name="android:text">@string/main_home_new_trip</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
