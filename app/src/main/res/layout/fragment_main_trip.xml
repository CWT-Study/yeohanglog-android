<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ffffff"
            app:contentInsetStart="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/layout_tabs"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:tabIndicatorColor="@color/color_main"
                    app:tabIndicatorHeight="3dp"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="@color/color_main"
                    app:tabTextAppearance="@style/tab_text"
                    app:tabTextColor="#000000"
                    >

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_class_detail_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여행"
                        />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_class_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기록"
                        />

                </com.google.android.material.tabs.TabLayout>

                <View
                    android:id="@+id/view_plus"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:background="@drawable/icon_plus_black"
                    app:layout_constraintBottom_toBottomOf="@id/layout_tabs"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintLeft_toRightOf="@id/layout_tabs"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layout_tabs"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>