<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white_ffffff"
        android:elevation="@dimen/size_4"
        app:contentInsetStart="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/text_title"
                style="@style/text_sub_title"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:text="TEXT_TRIP"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/map_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/gray_999999"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_trip_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_layout_trip"
                android:elevation="4dp"
                android:padding="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_view"
                app:layout_constraintWidth_percent="0.9"
                >

                <TextView
                    android:id="@+id/text_trip_name_title"
                    style="@style/trip_plan_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trip_plan_name"
                    app:layout_constraintBottom_toBottomOf="@id/text_trip_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_trip_name"
                    />

                <TextView
                    android:id="@+id/text_trip_name"
                    style="@style/trip_plan_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:layout_constraintLeft_toRightOf="@+id/text_trip_name_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/text_trip_period_title"
                    style="@style/trip_plan_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trip_plan_period"
                    app:layout_constraintBottom_toBottomOf="@id/text_trip_period"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_trip_period"
                    />

                <TextView
                    android:id="@+id/text_trip_period"
                    style="@style/trip_plan_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="2020.03.19 - 2020.03.27"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/text_trip_period_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_trip_name"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_menu"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_layout_trip"
                android:elevation="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_trip_info"
                app:layout_constraintWidth_percent="0.9"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_account"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_button_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/button_check"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:id="@+id/text_account"
                        style="@style/trip_plan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가계부"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#cccccc"
                    app:layout_constraintBottom_toBottomOf="@id/button_account"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintLeft_toRightOf="@id/button_account"
                    app:layout_constraintTop_toTopOf="@+id/button_account"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_check"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_button_center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/button_account"
                    app:layout_constraintRight_toLeftOf="@id/button_member"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:id="@+id/text_check"
                        style="@style/trip_plan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="준비물"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#cccccc"
                    app:layout_constraintBottom_toBottomOf="@id/button_check"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintLeft_toRightOf="@id/button_check"
                    app:layout_constraintTop_toTopOf="@+id/button_check"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_member"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_button_center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/button_check"
                    app:layout_constraintRight_toLeftOf="@id/button_photo"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:id="@+id/text_member"
                        style="@style/trip_plan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일행"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#cccccc"
                    app:layout_constraintBottom_toBottomOf="@id/button_member"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintLeft_toRightOf="@id/button_member"
                    app:layout_constraintTop_toTopOf="@+id/button_member"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_photo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_button_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/button_member"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:id="@+id/text_photo"
                        style="@style/trip_plan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사진"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="@dimen/size_15"
                android:background="@drawable/background_trip_plan"
                android:elevation="@dimen/size_4"
                android:padding="@dimen/size_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_menu"
                app:layout_constraintWidth_percent="0.9"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_trip_plan"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>